<div class="section-area shadow-div container mx-auto mt-5 jumbotron ">
    <p id="timer" class="text-white h2 mb-1 ml-auto bg-danger p-3 border-rounded d-inline-block">10</p>
    <div style="float: right; font-size: 3em;">
        {{#each lives}}
            ❤️
        {{/each}}
    </div>
    <div name="description" class="shadow p-3 bg-skyblue text-white m-1">
        {{question.description}}
    </div>
    <div class="row text-center mx-auto mt-4">
        <div class="col-lg-5 bg-skyblue text-white mx-5 p-3 m-1">
            <a href="/game/answer/{{question._id}}/{{question.answerA}}" class="link-white">
                A: {{question.answerA}}
            </a>
        </div>
        <div class="col-lg-5 bg-skyblue text-white p-3 m-1">
            <a href="/game/answer/{{question._id}}/{{question.answerB}}" class="link-white">
                Б: {{question.answerB}}
            </a>
        </div>
    </div>
    <div class="row text-center mx-auto mt-4">
        <div class="col-lg-5 bg-skyblue text-white mx-5 p-3 m-1">
            <a href="/game/answer/{{question._id}}/{{question.answerC}}" class="link-white">
                В: {{question.answerC}}
            </a>
        </div>
        <div class="col-lg-5 bg-skyblue text-white p-3 m-1">
            <a href="/game/answer/{{question._id}}/{{question.answerD}}" class="link-white">
                Г: {{question.answerD}}
            </a>
        </div>
    </div>
    <div class="text-center rounded-circle">
        <div class="col-lg-2 btn btn-danger p-2 mt-4">
            <a href="/game/report/{{question._id}}" class="link-white">
                Докладвай грешка
            </a>
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        window.location = "/game/over/over";
    }, 10000)
</script>

<script>
    setInterval(function() {
        let el = document.getElementById('timer');
        let sec = Number(el.textContent);
        el.textContent = sec - 1;
    }, 1000);
</script>
<script src="/js/particles.js"></script>