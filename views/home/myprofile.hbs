<section class="container mx-auto mt-5 jumbotron section-shadow">
    <h1 class="h2 text-center border-bottom border-dark pb-3 mb-2 text-blue">Моят профил</h1>
    <section class="mx-auto">
        <section class="row text-center m-auto">
            <div class="col-lg-5">
                <i class="fas fa-user size-10  mt-5 m-3" id="profile-icon-user"></i>
            </div>
                <form action="/users/profile/edit/{{user._id}}" method="post" class="col-lg-6 mt-3">
                    <div class="col">
                        <label class="col-lg-12">
                            <div class="input-group p-2">
                                <span class="input-group-text text-dark" id="inputGroup-sizing-default">Потребителско име: <input type="text" class="p-2 ml-2" name="username" value="{{user.username}}"/></span>
                            </div>
                        </label>
                        <label class="col-lg-12">
                            <div class="input-group p-2">
                                <span class="input-group-text text-dark" id="inputGroup-sizing-default">Име: <input class="p-2 ml-2" type="text" name="firstName" value="{{user.firstName}}"/></span>
                            </div>
                        </label>
                        <label class="col-lg-12">
                            <div class="input-group p-2">
                                <span class="input-group-text text-dark  mr-2" id="inputGroup-sizing-default">Фамилия: <input class="p-2 ml-2" type="text" name="lastName" value="{{user.lastName}}"/></span>
                            </div>
                        </label>
                        <label class="col-lg-12">
                            <div class="input-group p-2">
                                <span class="input-group-text text-dark" id="inputGroup-sizing-default">Роли: {{user.roles}}</span>
                            </div>
                        </label>
                        <label class="col-lg-12">
                            <div class="input-group p-2">
                                <span class="input-group-text text-dark" id="inputGroup-sizing-default">Поща: <input class="p-2 ml-2" type="text" name="email" value="{{user.email}}"/></span>
                            </div>
                        </label>
                        <label class="col-lg-12">
                            <div class="input-group p-2">
                                <span class="input-group-text text-dark" id="inputGroup-sizing-default">Точки: {{user.points}}</span>
                            </div>
                        </label>
                        <label class="col-lg-12 text-center">
                            <input type="submit" class="btn btn-outline-warning" value="Промени профил">
                        </label>
                    </div>
                </form>

            </table>
        </section>

    </section>
</section>